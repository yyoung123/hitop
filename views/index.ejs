<script>
  Splitting();
  const pause = document.querySelector("#mainVisual .pause");
  const play = document.querySelector("#mainVisual .play");

  pause.addEventListener("click", function () {
    mainVisualSlider.autoplay.stop();
    play.style.display = "block";
    pause.style.display = "none";
  });
  play.addEventListener("click", function () {
    mainVisualSlider.autoplay.start();
    play.style.display = "none";
    pause.style.display = "block";
  });

  //document.querySelector
  const mainVisualTL = gsap.timeline();
  mainVisualTL
    .from("#mainVisual .slogan h2 .char", { y: 100, opacity: 0, duration: 1, ease: "power4.out", stagger: 0.1 })
    .from("#mainVisual .slogan p .char", { y: 100, opacity: 0, duration: 1, ease: "power4.out", stagger: 0.02 }, "-=1");
  //두번째부터는 delayX
  //1: delay 1 , 절대시간 1 -> 동시에 실행.
  //1:에대한 "-=1" 상대시간 -> 1초먼저 실행(1번모션이 종료되기 전)

  // gsap.from("#mainVisual .slogan h2 .char", { y: 100, opacity: 0, delay: 1, duration: 1, ease: "power4.out", stagger: 0.02 });
  // gsap.from("#mainVisual .slogan p .char", { y: 100, opacity: 0, delay: 1, duration: 1, ease: "power4.out", stagger: 0.02 });
  const mainVisualSlider = new Swiper("#mainVisual", {
    effect: "fade",
    speed: 1000,
    loop: true,
    simulateTouch: false,
    navigation: {
      nextEl: "#mainVisual .next",
      prevEl: "#mainVisual .prev",
    },

    pagination: {
      el: "#mainVisual .pagination .bullets",
      type: "bullets",
      clickable: true,
    },
    autoplay: {
      delay: 3000,
      disableOnInteraction: false,
    },
  });
</script>
